# Environment Configuration for Solar Power Prediction API

# Application Settings
APP_NAME="Solar Power Generation Predictor"
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Startup Mode: "train_now" or "load_models"
STARTUP_MODE=train_now

# Model Directories and Data Paths
MODEL_DIR=./models
WEATHER_DATA_DIR=./app/data/weather-data
SOLAR_DATA_DIR=./app/data/solar-data

# Model Training Parameters
WEATHER_WINDOW_SIZE=30
WEATHER_MODEL_MODE=multi
SOLAR_TEST_MONTHS=6
SOLAR_VALID_MONTHS=1

# Logging
LOG_LEVEL=INFO

# CORS (comma-separated list)
CORS_ORIGINS=*
